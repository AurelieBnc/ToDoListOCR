{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    {% if tasks|length == 0 %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore de tâche enregistrée. <a href="{{ path('tasks_create') }}" class="btn btn-info text-white d-flex col-md-3 justify-content-center ">Créer une tâche</a>
        </div>
    {% else %}
    <div class="d-flex justify-content-end mt-5 mb-3">
        <a href="{{ path('tasks_create') }}" class="btn btn-info text-white d-flex col-md-3 justify-content-center ">Créer une tâche</a>
    </div>
        <div class="row">
            {% for task in tasks.data %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="img-thumbnail">
                    <div class="figure-caption">
                        <div>
                            <h4><a href="{{ path('tasks_edit', {'id' : task.id }) }}" class="btn text-primary fw-bold ">{{ task.title }}</a>
                                {% if task.isDone %}
                                    <span><i class="fa-solid fa-check ps-3"></i></span>
                                {% else %}
                                    <span><i class="fa-solid fa-xmark ps-3"></i></span>
                                {% endif %}</h4>
                                <p class="p-2">{{ task.content }}</p>
                        </div>
                        <div class="d-flex justify-content-end pe-3 p-2 fst-italic fw-bold">
                        {% if task.owner == null %}
                            Anonyme
                        {% else %}
                            {{ task.owner.username }}
                        {% endif %}
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-end mb-3">
                    <form action="">
                        <a href="{{ path('tasks_toggle', {'id' : task.id }) }}" class="btn btn-success btn-sm">
                            {% if not task.isDone %}
                                Marquer comme faite
                            {% else %}
                                Marquer non terminée
                            {% endif %}
                        </a>
                    </form>
                    <a onclick="return confirm('Es-tu sûr de vouloir supprimer cette tâche ?')"
                    href="{{ path('tasks_delete', {'id': task.id}) }}" class="btn btn-danger btn-sm"
                    title="Suppression de la tâche"> 
                    <i id="trash-icon" class="fa-solid fa-trash"></i>
                </a>
                </div>
            </div>
            {% endfor %}

            {% if flag is same as 1 %}
                {% set path = 'tasks_list_is_done' %}
            {% elseif flag is same as 0 %}
                {% set path = 'tasks_list_is_not_done' %}
            {% endif %}
            {% set pages = tasks.pages %}
            {# {% set currentPage = tasks.page %} #}
            {% set currentPage = app.request.get('page') %}
            {% include 'partials/pagination.html.twig' %}

        </div>
    {% endif %}
{% endblock %}

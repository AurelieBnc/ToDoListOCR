{% if pages > 1 %}
<div class="mt-5 pb-sm-5 pb-lg-0 pt-sm-0 pt-lg-5">
    <div class=" d-flex align-items-end justify-content-center text-center">
        <nav class="d-flex align-items-center ">
            <ul class="pagination">
                {% set maxPage = pages|abs %}

                {% if currentPage != 1 and currentPage > 0 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(path, {'status':status, page:currentPage -1}) }}" title="Previous">
                            <span>&laquo;</span>
                          </a>
                    </li>
                {% endif %}

                {% for page in 1..pages %}
                    <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                        <a href="{{ path(path, {'status':status, page:page}) }}" class="page-link">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if currentPage != maxPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(path, {'status':status, page:currentPage +1}) }}" title="Next">
                        <span>&raquo;</span>
                      </a>
                </li>
                {% endif %}

            </ul>
        </nav>
    </div>
</div>
{% endif %}

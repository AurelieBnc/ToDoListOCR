<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        <title>To Do List app</title>

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="{{ asset('css/shop-homepage.css') }}" rel="stylesheet">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body class="m-0 p-0">
        <nav class="navbar navbar-light navbar-fixed-top mt-0" style="background-color: #e3f2fd;" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand text-primary fw-bold" href="{{ path('app_home_page') }}">To Do List app</a>

                    <img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" />
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container mt-3">
            <div class="column d-flex justify-content-between mb-3">
                {% if is_granted('USER_CREATE') %}
                    <a href="{{ path('users_create') }}" class="btn btn-primary m-2">Créer un utilisateur</a>
                {% endif %}
                {% if is_granted('USER_LIST') %}
                    <a href="{{ path('users_list', {'page' : 1}) }}" class="btn btn-primary m-2">Liste utilisateurs</a>
                {% endif %}
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="m-2 ms-auto btn btn-danger">Se déconnecter</a>
                {% endif %}

                {% if not app.user and 'app_login' != app.request.attributes.get('_route') %}
                    <a href="{{ path('app_login') }}" class="ms-auto btn btn-success">Se connecter</a>
                {% endif %}
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success" role="alert">
                            <div class="fw-bold row d-flex justify-content-around">
                                Superbe ! {{ flash_message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endfor %}

                    {% for flash_message in app.session.flashBag.get('error') %}
                        <div class="alert alert-danger" role="alert">
                            <p>Oops !</p> 
                            <div>
                                {{ flash_message }}
                                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endfor %}

                    {% block header_title %}{% endblock %}
                    {% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-md-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <!-- /.container -->

        <div class="container">

            <hr class="mt-5">
            <footer>
                <div class="row">
                    <div class="col-lg-12">
                        <p class="d-flex justify-content-end">Copyright &copy; OpenClassrooms</p>
                    </div>
                </div>
            </footer>

        </div>

        {# <script src="{{ asset('js/jquery.js') }}"></script> #}
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="https://kit.fontawesome.com/ea7977182c.js" crossorigin="anonymous"></script>
    </body>
</html>
